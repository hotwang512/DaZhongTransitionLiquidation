<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" id="AddNewBankDataDialog">
    <div class="modal-dialog modal-sm" style="width: 100%; padding-right: 20px; margin-top: 100px;">
        <div class="modal-content" style="width: 500px; margin-left: auto; margin-right: auto;">
            <div class="modal-header" style="width: 100%; margin-left: auto; margin-right: auto;">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel_title" style="color: #555; font-family: Calibri;">新增数据</h4>
            </div>
            <div class="modal-body" style="width: 100%;">
                <table style="width: 100%;margin-left:65px">
                    <tr style="height: 45px;">
                        <td style="width: 100px;text-align: left"><span class="spanText">菜单</span></td>
                        <td>
                            <input id="ModuleName" type="text" class="input_text form-control" validatetype="required" />
                        </td>
                    </tr>
                    <tr style="height: 45px;">
                        <td style="width: 100px;text-align: left"><span class="spanText">URl</span></td>
                        <td>
                            <textArea rows="5" id="Url" type="text" class="input_text form-control"></textArea>
                            @*<input id="Url"  validatetype="required" />*@
                        </td>
                    </tr>
                    <tr style="height: 45px; ">
                        <td style="width: 100px;text-align: left"><span class="spanText">类型</span></td>
                        <td>
                            <select id="Type" class="input_text form-control">
                                <option value="0">文件夹</option>
                                <option value="1">项目</option>
                                <option value="2">隐藏</option>
                            </select>
                        </td>
                    </tr>
                    <tr style="height: 45px;">
                        <td style="width: 100px;text-align: left"><span class="spanText">顺序</span></td>
                        <td>
                            <input id="Zorder" type="text" class="input_text form-control" />
                        </td>
                    </tr>
                    <tr id="SubjectShow" class="SubjectTr" style="height: 45px; ">
                        <td style="width: 100px;text-align: left"><span class="spanText">是否一级菜单</span></td>
                        <td>
                            <select id="FirstMenu" class="input_text form-control">
                                <option value="0">否</option>
                                <option value="1">是</option>
                            </select>
                        </td>
                    </tr>
                    <tr id="SubjectCode" class="" style="height: 45px; display:none">
                        <td style="width: 100px;text-align: left"><span class="spanText">父级菜单</span></td>
                        <td>
                            <input id="ParentMenu" type="text" readonly="readonly" class="input_text form-control" />
                            <input id="hideParentMenu" type="text" class="hide" />
                        </td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <button id="OKButton" type="button" class="btn btn-warning" style="width: 85px;background-color: #16609c!important;margin-left: 18px; margin-top: 10px"><i class="iconfont btn_icon" style="color: white !important;margin-left: 0">&#xe6f3;</i><span style="margin-left: 7px; float: left;">保存</span></button>
                <button id="CancelBtn" type="button" class="btn btn-danger" style="width: 85px; border-color: #16609c !important; background-color: #16609c !important;margin-left: 18px; margin-top: 10px"><i class="iconfont btn_icon" style="color: white !important;margin-left: 0">&#xe678;</i><span style="margin-left: 7px; float: left;">取消</span></button>
            </div>
        </div>
    </div>
</div>

